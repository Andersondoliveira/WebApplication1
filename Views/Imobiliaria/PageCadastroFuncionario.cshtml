<html>
<head>
	<meta charset="utf-8"/>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.js" integrity="sha512-+k1pnlgt4F1H8L7t3z95o3/KO+o78INEcXTbnoJQ/F2VqDVhWoaiVml/OEHv9HsVgxUaVW+IbiZPUJQfF/YxZw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<style>

		body {
			background: url("https://img.freepik.com/fotos-gratis/natureza-morta-de-chaves-para-uma-nova-casa_23-2151015271.jpg?t=st=1733182502~exp=1733186102~hmac=4eae5dfa17c50595dd1a4a6d5898f2e19a9b82402409996be3cf04d4564716de&w=740");
			background-size: cover;
			background-position: center;
			min-height: 100vh;
			align-items: center;
			justify-content: center;
		}

		h2 {
			font-size: 36px;
			text-align: center;
			color: black;
		}

		.container {
			width: 500px;
			background: transparent;
			border: 2px solid #333;
			backdrop-filter: blur(20px);
			border-radius: 10px;
			padding: 50px 60px;
		}

		.input-container {
			position: relative;
			width: 100%;
			height: 100%;
			margin: 30px 0;
		}

			.input-container input {
				width: 85%;
				height: 85%;
				background: transparent;
				border: none;
				outline: none;
				border: 2px solid rgba(255, 255, 255, .2);
				border-radius: 10px;
				font-size: 14px;
				color: #000000;
				padding: 20px 45px 20px 20px;
			}

				.input-container input::placeholder {
					color: #fff;
				}

		.submit-button {
			width: 100%;
			height: 50px;
			background-color: #333;
			border: none;
			border-radius: 10px;
			color: #fff;
			font-weight: 500;
			margin-top: 24px;
			cursor: pointer;
			outline: #fff;
			font-size: 14px;
		}

			.submit-button:hover {
				color: rgb(255, 255, 255);
			}
	</style>

</head>
<body>

	<br />
			<a href="/imobiliaria/PageLogin">Voltar</a>
	<br /><br />

	<h2>Novo Funcionário</h2>
	<br>
	<div class="input-container">
		Nome: <input type="text" id="nome" />
	</div>
	<div class="input-container">
		E-mail: <input type="text" id="email" />
	</div>
	<div class="input-container">
		Senha: <input type="text" id="senha" />
	</div>

	<br />
		
	<input type="button" class="submit-button" value="Concluir Cadastro" onclick="inserir()"/>

<script type="text/javascript">

	function inserir(){
		var jsonEnvio = {};
		jsonEnvio.email     = document.getElementById("email").value;
		jsonEnvio.nome      = document.getElementById("nome").value;
		jsonEnvio.senha     = document.getElementById("senha").value;
		
		$.ajax({
			url: "/Funcionario/Inserir/",
			data: jsonEnvio,
			type:"post",
			success: function (resp){
				if (resp=="ok"){
					alert("Funcionario cadastrado com sucesso!");
					document.location.href = "/imobiliaria/PageLogin?email=" + jsonEnvio.email;
				}else{
					alert(resp);
				}
			},
			error: function (){
				alert("Ocorreu um erro ao cadastrar!!!");
			}
		});
	}
</script>
	
</body>
</html>